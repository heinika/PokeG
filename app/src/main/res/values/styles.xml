<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AbilityStyle">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:translationZ">10dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/item_ability_background</item>
    </style>

    <style name="AbilityDescStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:translationZ">10dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_margin">4dp</item>
        <item name="lineHeight">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/item_ability_desc_background</item>
    </style>
</resources>